local outdir = "../../docs/_posts"

filter_settings "staticsite" {
  site_root = outdir,
  header = {
     layout="post",
     date = function(parameters)
       return os.date("!%Y-%m-%d %T", parameters.time)
     end
  },
  map = {
    [".css$"] =  "../../jekyll_root/css/"
  },
}

if mode=="publish" then
  Make:enable_extension "staticsite"
  Make:htlatex {}
end
