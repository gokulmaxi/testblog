local outdir = "../../docs/_posts"

local domfilter = require "make4ht-domfilter"


filter_settings "staticsite" {
  site_root = outdir,
  header = {
     layout="post",
     date = function(parameters)
       print("debugging current time", parameters.time, os.date("!%Y-%m-%d %T", parameters.time))
       return os.date("!%Y-%m-%d %T", parameters.time)
     end
  },
  map = {
    [".css$"] =  "../../docs/css/"
  },
}

if mode=="publish" then
  Make:enable_extension "staticsite"
  -- Make:match("html$", domprocess)
  Make:htlatex {}
  Make:htlatex {}
end
